<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ABCEE"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#FBC02D"
        android:gravity="center"
        android:padding="10dp"
        android:text="Calculate Your"
        android:textSize="32sp"
        android:textStyle="bold"
   />

    <TextView
        android:id="@+id/text2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#673AB7"
        android:gravity="center"
        android:text="AGE"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Select Birthday"
        android:textSize="18sp"
        android:backgroundTint="#5BA8F4"
        />

    <TextView
        android:id="@+id/brithday"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#1976D2"
        android:gravity="center"
        android:text="1/2/2024"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select Date"
        android:textColor="#070707"/>

    <TextView
        android:id="@+id/inSecondsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#1976D2"
        android:gravity="center"
        android:text="0000"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="In Seconds"
        android:textColor="#070707"/>

    <TextView
        android:id="@+id/inMinutesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#1976D2"
        android:gravity="center"
        android:text="0000"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="In Minuttes"
        android:textColor="#070707"/>

    <TextView
        android:id="@+id/inHoursText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#1976D2"
        android:gravity="center"
        android:text="0000"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="In Hours"
        android:textColor="#070707"/>

    <TextView
        android:id="@+id/inDayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#1976D2"
        android:gravity="center"
        android:text="0000"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="In Days"
        android:textColor="#070707"/>

</LinearLayout>